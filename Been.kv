<WScreen>:
    MDBoxLayout:
        orientation: 'vertical'
        spacing: '20sp'
        MDTopAppBar:
            title: "LCW"
            right_action_items: [["dots-vertical", lambda x: app.callback()]] 
        MDBoxLayout:
            spacing: "10sp"
            size_hint: 0.9, None
            pos_hint: {'center_x': 0.5}
            MDIconButton:
                icon: "search-web"
                theme_icon_color: "Custom"
                md_bg_color: app.theme_cls.primary_color
                id: search_btn
                on_press: root.search()
            MDTextField:
                id: city
                hint_text: "Введіть місто"
                mode: "round"
                max_text_length: 15
                helper_text: "Повідомлення"
        MDBoxLayout:
            orientation: 'vertical'
            pos_hint: {'center_X': 0.5}
            size_hint: 0.9, 0.4
            MDLabel:
                id: temp
                text: '14°C'
                font_style: 'H2'
                halign: 'center'
            MDLabel:
                id: desc
                text: "ЯСНО"
                font_style: 'H4'
                halign: 'center'